# --- TEMPLATE CONFIGURATION ---
# Rename this file to 'application.properties' and fill in the values below.

spring.application.name=journeyman-nexus-pitcraft
spring.threads.virtual.enabled=true

# Database
spring.datasource.url=jdbc:h2:file:/app/data/nexusdb;DB_CLOSE_ON_EXIT=FALSE;AUTO_SERVER=TRUE
spring.datasource.driverClassName=org.h2.Driver
spring.datasource.username=sa
spring.datasource.password=password
spring.jpa.database-platform=org.hibernate.dialect.H2Dialect

# API KEYS (DO NOT COMMIT REAL KEYS)
twilio.account_sid=YOUR_SID_HERE
twilio.auth_token=YOUR_TOKEN_HERE
twilio.phone_number=YOUR_TWILIO_NUM
user.phone_number=YOUR_CELL_NUM

spring.ai.openai.api-key=YOUR_OPENAI_KEY
square.access_token=YOUR_SQUARE_TOKEN